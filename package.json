	"main": "app.js",
	"scripts": {
		"debug": "ndb server.js",
		"lint": "npm run lint:eslint && npm run lint:prettier",
		"lint:eslint": "eslint . --ext .js,.jsx",
		"lint:eslint:fix": "eslint . --ext .js,.jsx --fix",
		"lint:fix": "npm run lint:eslint:fix && npm run lint:prettier:fix",
		"lint:prettier": "prettier -c .",
		"lint:prettier:fix": "prettier -c . --write",
		"start": "NODE_ENV=development nodemon server.js",
		"test": "NODE_ENV=test nyc mocha --require ./test/fixtures.js --recursive --timeout 20000 --exit",
		"start-frontend": "NODE_ENV=development-frontend nodemon server.js",
		"test-report": "nyc report --reporter=html && open ./coverage/index.html"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix",
		"*.{js,css,md}": "prettier --write"
	},
	"dependencies": {
		"@sendgrid/mail": "^7.3.0",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
