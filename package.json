		"nodemon": "^2.0.6",
		"nyc": "^15.1.0",
		"open": "^7.3.0",
		"pm2": "^4.5.0",
		"pre-commit": "^1.2.2",
		"prettier": "2.1.2",
		"request": "^2.88.2"
	}
